<Window x:Class="OSA_File_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSA_File_Management_System"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized" d:DesignWidth="1117.49" d:DesignHeight="677.96">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header (spans both columns) -->
        <Grid Grid.ColumnSpan="2" Background="CadetBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Drawer toggle -->
            <Button x:Name="ToggleDrawerButton" Content="☰" Width="36" Height="36" Margin="8" Click="ToggleDrawer_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Image Source="pack://application:,,,/images/coa_logo.png" Margin="2,15,2,2"
                   Width="100" Height="100" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" Grid.Row="0" VerticalAlignment="Center"/>

            <TextBlock Text="OSA File Management System" 
                       FontFamily="Arial"  
                       FontSize="15"    
                       FontWeight="Bold"    
                       Foreground="White"   
                       Margin="5"          
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"  
                       TextAlignment="Center" Grid.Row="1" />
            <TextBlock Text="LGAS-B, Oriental Mindoro"
                       FontFamily="Arial"  
                       FontSize="10"    
                       FontWeight="ExtraLight"    
                       Foreground="White"   
                       Margin="0"          
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top"
                       TextWrapping="Wrap" 
                       TextAlignment="Center" Grid.Row="2" />
        </Grid>

        <!-- Drawer (overlay) -->
        <Border x:Name="DrawerPanel"
                Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"
                Width="220" Background="CadetBlue" Padding="0"
                HorizontalAlignment="Left"
                Panel.ZIndex="100"
                RenderTransformOrigin="0,0.5">
            <Border.RenderTransform>
                <TranslateTransform x:Name="DrawerTranslate" X="0" />
            </Border.RenderTransform>

            <ListBox x:Name="CategoryListBox" SelectionChanged="CategoryListBox_SelectionChanged" Background="CadetBlue" Width="220">
                <ListBoxItem Margin="5,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/images/RegionCom.png" Width="40" Height="40" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Text="Region Communications" VerticalAlignment="Center" Margin="4" FontWeight="Bold" Foreground="#131842" />
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem Margin="5,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/images/Inventory.png" Width="40" Height="40" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Text="Inventory" VerticalAlignment="Center" Margin="4" FontWeight="Bold" Foreground="#131842"/>
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem Margin="5,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/images/Certificate.png" Width="40" Height="40" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Text="Monthly Reports" VerticalAlignment="Center" TextWrapping="NoWrap" Margin="4" FontWeight="Bold" Foreground="#131842"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem Margin="5,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/images/icons/ai.png" Width="40" Height="40" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Text="AI Assistant" VerticalAlignment="Center" TextWrapping="NoWrap" Margin="4" FontWeight="Bold" Foreground="#131842"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
        </Border>

        <!-- Main content -->
        <ContentControl x:Name="ContentArea" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3"/>

        <Button Content="Backup Database" Grid.Row="2" Grid.Column="1" Padding="5" Margin="10" Background="#22177A" Foreground="White" Command="{Binding BackupDatabaseBtn}"/>

    </Grid>
</Window>