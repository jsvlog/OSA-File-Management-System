<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OSA Management System</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
    
    <link rel="stylesheet" href="~/css/app.css" />
    
    <style>
        [x-cloak] { display: none !important; }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">
    <nav class="bg-blue-800 text-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-8">
                    <a href="/" class="text-xl font-bold hover:text-blue-200">
                        OSA Management System
                    </a>
                    <div class="hidden md:flex space-x-4">
                        <a href="/RegionCom" class="px-3 py-2 rounded hover:bg-blue-700 transition">
                            Region Communications
                        </a>
                        <a href="/RegionCom/Dashboard" class="px-3 py-2 rounded hover:bg-blue-700 transition">
                            Dashboard
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-sm text-blue-200" id="currentTime"></span>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 text-gray-400 py-6 mt-12">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <p>&copy; @DateTime.Now.Year OSA Management System. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/app.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
