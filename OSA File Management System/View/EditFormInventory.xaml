<Window x:Class="OSA_File_Management_System.View.EditFormInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSA_File_Management_System.View"
        mc:Ignorable="d"
        Title="Edit Inventory Item" Height="650" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="38"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="2,0,0,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#F4F6F9" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="15,15,0,0" Background="#257180">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <TextBlock Text="✏️" FontSize="20" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock Text="Edit Inventory Item" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                            Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0"
                            Command="{Binding Path=CloseEditForm}" FontSize="16"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25">
                <StackPanel>

                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Item Information" FontSize="16" FontWeight="Bold" Foreground="#131842" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Date Acquired" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker SelectedDate="{Binding Path=EditFormData.Date, Mode=TwoWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Type / Category" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=EditFormData.Type, Mode=TwoWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Current Status" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=EditFormData.Status, Mode=TwoWay}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Location &amp; Details" FontSize="16" FontWeight="Bold" Foreground="#131842" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Location" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=EditFormData.Location, Mode=TwoWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Remarks" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=EditFormData.Remarks, Mode=TwoWay}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Description" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                            <TextBox Text="{Binding Path=EditFormData.Description}" TextWrapping="Wrap" Height="60" AcceptsReturn="True" VerticalContentAlignment="Top"/>

                            <TextBlock Text="Scanned Document" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding Path=EditFormData.ScannedCopy}" IsReadOnly="True" Background="#F9F9F9"/>
                                <Button Grid.Column="1" Content="📂 Browse" Command="{Binding SelectFile}" Margin="10,0,0,0" Style="{StaticResource ModernBtn}" Background="#888"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Background="White" CornerRadius="0,0,15,15" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="25,0">
                    <Button Content="Cancel" Width="120" Margin="0,0,10,0"
                            Command="{Binding Path=CloseEditForm}"
                            Style="{StaticResource ModernBtn}" Background="#E0E0E0" Foreground="#333">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="💾 Save Changes" Width="160"
                            Command="{Binding Path=SaveEditedDocument}"
                            Style="{StaticResource ModernBtn}" Background="#131842">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>