<UserControl x:Class="OSA_File_Management_System.View.Inventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OSA_File_Management_System.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Buttons and Commands Section -->
        
        <Grid Grid.Row="0" Margin="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Search" Margin="3" Padding="3" Grid.Column="0" />
            <TextBox Margin="3" Padding="3" Width="300" Grid.Column="1" HorizontalAlignment="Left"/>
            <Button x:Name="YearButton" Content="Filter" Margin="3" Padding="3" Click="YearButton_Click" Grid.Column="2" />
            <Popup Name="YearPopup" PlacementTarget="{Binding ElementName=YearButton}" StaysOpen="False">
                <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                    <StackPanel>
                        <!-- ListBox with ListBoxItems containing CheckBoxes -->
                        <ListBox>
                            <ListBoxItem>
                                <CheckBox Content="2016" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="2017" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="2018" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="2019" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="2020" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="2021" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="2022" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="2023" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <CheckBox Content="2024" />
                            </ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Popup>
            <Button Content="Add" Margin="3" Padding="3" Grid.Column="3" Command="{Binding ShowAddForm}"/>
            <Button Content="Create Turn Over Report" Margin="3" Padding="3" Grid.Column="4" />
        </Grid>

        <!-- DataGrid Section -->
        <DataGrid x:Name="InventoryDataGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="2" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding DocumentList}" >
            <!-- Define the columns of the DataGrid -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date"  Width="5*" Binding="{Binding Date, StringFormat=yyyy-MM-dd}"/>
                <DataGridTextColumn Header="Type"  Width="5*" Binding="{Binding Type}"/>
                <DataGridTemplateColumn Header="Description" Width="30*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Description}" 
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Status"  Width="5*" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Location"  Width="5*" Binding="{Binding Location}"/>
                <DataGridTextColumn Header="Remarks"  Width="5*" Binding="{Binding Remarks}"/>
                
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Edit" Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                  CommandParameter="{Binding}" />
                                <MenuItem Header="Delete" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                  CommandParameter="{Binding}" />
                                <MenuItem Header="View Details and History" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                  CommandParameter="{Binding}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

    </Grid>
</UserControl>
