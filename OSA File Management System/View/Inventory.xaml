<UserControl x:Class="OSA_File_Management_System.View.Inventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OSA_File_Management_System.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <!-- Row Definitions: 25% for the sorting and commands, 75% for the DataGrid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <!-- For buttons and sorting commands -->
            <RowDefinition Height="*" />
            <!-- For DataGrid -->
        </Grid.RowDefinitions>

        <!-- Buttons and Commands Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add Item" Margin="5" Padding="10" />
            <Button Content="Remove Item" Margin="5" Padding="10" />
            <Button Content="Sort by Name" Margin="5" Padding="10" />
            <Button Content="Sort by Date" Margin="5" Padding="10" />
        </StackPanel>

        <!-- DataGrid Section -->
        <DataGrid x:Name="InventoryDataGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="10" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Define the columns of the DataGrid -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Name"  Width="*"/>
                <DataGridTextColumn Header="Quantity"  Width="Auto"/>
                <DataGridTextColumn Header="Date Added"  Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
