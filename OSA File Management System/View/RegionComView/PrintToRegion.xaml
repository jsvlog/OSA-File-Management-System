<Window x:Class="OSA_File_Management_System.View.RegionComView.PrintToRegion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSA_File_Management_System.View.RegionComView"
        mc:Ignorable="d"
        Title="PrintToRegion" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <FlowDocumentReader Name="TransmittalToRegion" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            ViewingMode="TwoPage"
                            IsFindEnabled="True"
                            IsPrintEnabled="True"
                            Grid.Row="0"/>

        <Button Content="Print" 
                HorizontalAlignment="Center" 
                Margin="10" 
                Width="100" 
                Command="{Binding}"
                Grid.Row="1" />




    </Grid>
</Window>
