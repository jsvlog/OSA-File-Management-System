<Window x:Class="OSA_File_Management_System.View.RegionComView.ChoosePrintToRegion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSA_File_Management_System.View.RegionComView"
        mc:Ignorable="d"
        Title="Print Transmittal" Height="250" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="15" Background="White" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="15,15,0,0" Background="#257180">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🖨️" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Print Transmittal" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Margin="0,0,15,0" Width="30" Height="30" 
                            Foreground="White" Background="Transparent" BorderThickness="0" 
                            FontSize="14" Cursor="Hand"
                            IsCancel="True">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="30,0">
                <TextBlock Text="Enter Transmittal No." Foreground="#555" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <TextBox Text="{Binding TransNumber, UpdateSourceTrigger=PropertyChanged}" 
                         Height="40" VerticalContentAlignment="Center" Padding="10,0"
                         FontSize="14" BorderBrush="#DDD" BorderThickness="1">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="Example: T-2025-001" Foreground="#999" FontSize="11" Margin="2,5,0,0" FontStyle="Italic"/>
            </StackPanel>

            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Button Content="Proceed to Arrange" Width="180" Height="45"
                        Command="{Binding ArrangeList}"
                        Background="#131842" Foreground="White" FontWeight="Bold" FontSize="14"
                        Cursor="Hand" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="22"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1F2A63"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

        </Grid>
    </Border>
</Window>