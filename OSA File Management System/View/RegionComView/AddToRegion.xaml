<Window x:Class="OSA_File_Management_System.View.RegionCom.AddToRegion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSA_File_Management_System.View.RegionCom"
        mc:Ignorable="d"
        Title="Add Document To Region" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="38"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="2,0,0,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="FormCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#F4F6F9" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="15,15,0,0" Background="#257180">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <TextBlock Text="➕" FontSize="20" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock Text="Add New Document (To Region)" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                            Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0"
                            Command="{Binding CloseAddToRegion}" FontSize="16"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25">
                <StackPanel>

                    <Border Style="{StaticResource FormCard}">
                        <StackPanel>
                            <TextBlock Text="Document Information" FontSize="16" FontWeight="Bold" Foreground="#131842" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Date Received" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker SelectedDate="{Binding Path=AddToRegionData.DateReceived, Mode=TwoWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Document Date" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker SelectedDate="{Binding Path=AddToRegionData.DocumentDate, Mode=TwoWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Control No." Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=AddToRegionData.RefNumber}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="6">
                                    <TextBlock Text="Type of Document" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=AddToRegionData.TypeOfDocs}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource FormCard}">
                        <StackPanel>
                            <TextBlock Text="Content Details" FontSize="16" FontWeight="Bold" Foreground="#131842" Margin="0,0,0,15"/>

                            <TextBlock Text="Subject / Particulars" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Path=AddToRegionData.SubjectParticulars}" TextWrapping="Wrap" Height="60" AcceptsReturn="True" VerticalContentAlignment="Top" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Received From" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=AddToRegionData.ReceivedFrom}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Number of Copies" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=AddToRegionData.NumberOfCopies}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource FormCard}">
                        <StackPanel>
                            <TextBlock Text="Status &amp; Signatures" FontSize="16" FontWeight="Bold" Foreground="#131842" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Date Signed by SA" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker SelectedDate="{Binding Path=AddToRegionData.DateSignBySA, Mode=TwoWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Date Sent to Region" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker SelectedDate="{Binding Path=AddToRegionData.DateSentOutToRegion, Mode=TwoWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Date Received by Region" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker SelectedDate="{Binding Path=AddToRegionData.DateReceiveByRegion, Mode=TwoWay}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource FormCard}">
                        <StackPanel>
                            <TextBlock Text="Routing &amp; Logistics" FontSize="16" FontWeight="Bold" Foreground="#131842" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Date Sent to Teams" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker SelectedDate="{Binding Path=AddToRegionData.DateSentOutToTeam, Mode=TwoWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Receiver" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=AddToRegionData.Receiver}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Location" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=AddToRegionData.Location}"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="LBC Reference No." Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Path=AddToRegionData.LbcRefNumber}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Scanned PDF Path" Style="{StaticResource LabelStyle}"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{Binding Path=AddToRegionData.ScannedCopy}" IsReadOnly="False" Background="#F9F9F9"/>
                                        <Button Grid.Column="1" Content="📂" Command="{Binding SelectFile}" Margin="5,0,0,0" Background="#DDD" Foreground="Black"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Remarks" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                            <TextBox Text="{Binding Path=AddToRegionData.Remarks}" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top"/>

                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="Tracking ID (For Threading)" Style="{StaticResource LabelStyle}" Foreground="#888"/>
                                <TextBox Text="{Binding Path=AddToRegionData.TrackingCode, Mode=TwoWay}" Background="#F0F0F0" Foreground="Gray" IsReadOnly="True"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Background="White" CornerRadius="0,0,15,15" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="25,0">
                    <Button Content="Cancel" Width="120" Margin="0,0,10,0"
                            Command="{Binding CloseAddToRegion}"
                            Style="{StaticResource ModernBtn}" Background="#E0E0E0" Foreground="#333">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="💾 Save Document" Width="180"
                            Command="{Binding AddToRegion}"
                            Style="{StaticResource ModernBtn}" Background="#131842">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>