<Window x:Class="OSA_File_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSA_File_Management_System"
        mc:Ignorable="d"
        Title="OSA Management System" 
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen"
    d:DesignWidth="1200" d:DesignHeight="800">

    <Window.Resources>
        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <ScrollContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavResultItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="Transparent" 
                                BorderThickness="4,0,0,0" 
                                CornerRadius="0,5,5,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F2A50"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#257180"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4FD1C5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F7FA" x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#131842" x:Name="SidebarBorder">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" 
                        x:Name="SidebarToggleButton" 
                        Width="40" Height="40" 
                        HorizontalAlignment="Left" 
                        Margin="10,10,0,0"
                        Background="Transparent" 
                        BorderThickness="0"
                        Foreground="White"
                        Cursor="Hand"
                        Click="SidebarToggleButton_Click">
                    <TextBlock Text="â˜°" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#257180"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Grid.Row="1" x:Name="SidebarContent" Margin="0,20,0,20">
                    <Border Width="90" Height="90" CornerRadius="50" Background="White" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2" Color="White"/>
                        </Border.Effect>
                        <Image Source="pack://application:,,,/images/coa_logo.png" Margin="5"
                Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <TextBlock Text="OSA MANAGEMENT" 
                Foreground="White" FontSize="16" FontWeight="Bold" 
                HorizontalAlignment="Center"/>

                    <TextBlock Text="LGAS-B, Oriental Mindoro" 
                Foreground="#8892B0" FontSize="11" 
                HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <ListBox x:Name="CategoryListBox" 
                         Grid.Row="2" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         SelectionChanged="CategoryListBox_SelectionChanged"
                         ItemContainerStyle="{StaticResource NavResultItem}">

                    <ListBoxItem Tag="RegionCom">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¬" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Communications" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Inventory">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¦" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Inventory System" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Certificates">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“œ" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Certificates" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>

                <StackPanel Grid.Row="3" x:Name="SidebarFooter" Margin="20,0,20,20">
                    <Separator Background="#2C3452" Margin="0,0,0,15"/>

                    <Button Command="{Binding BackupDatabaseBtn}" 
                            Background="#257180" Foreground="White" BorderThickness="0"
                            Padding="10" Cursor="Hand" FontWeight="Bold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" Margin="0,0,10,0"/>
                            <TextBlock Text="Backup Database"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="v1.0.2" Foreground="#444E75" FontSize="10" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <ContentControl x:Name="ContentArea" Grid.Column="1" Margin="0"/>

    </Grid>
</Window>