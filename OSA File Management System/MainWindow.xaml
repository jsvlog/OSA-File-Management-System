<Window x:Class="OSA_File_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSA_File_Management_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="CategoryListBox" SelectionChanged="CategoryListBox_SelectionChanged">
            <ListBoxItem Content="Category 1" Margin="5,20,0,0"/>
            <ListBoxItem Content="Category 2" Margin="5,20,0,0"/>
            <ListBoxItem Content="Category 3" Margin="5,20,0,0"/>
            
        </ListBox>

        <ContentControl x:Name="ContentArea" Grid.Column="1"/>





    </Grid>
</Window>
